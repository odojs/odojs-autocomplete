@require "../node_modules/normalize.css/normalize.css"
@require "../node_modules/flexy-grid/flexy-grid"

#root
  width 600px
  margin 100px auto

.underline
  text-decoration underline

.autocomplete
  position relative

  &.open input
    border-bottom-left-radius 0
    border-bottom-right-radius 0

  input
    width 280px
    height 50px
    padding 0 20px
    line-height 50px
    font-size 16px
    border 1px solid #aaa
    border-radius 4px

    &:focus
      outline none

  ul
    top 100%
    left 0
    right 0
    position absolute
    list-style-type none
    margin 0
    margin-top -1px
    padding 0
    width 280px
    border 1px solid #aaa
    background-color #fff
    font-size 16px
    border-bottom-left-radius 4px
    border-bottom-right-radius 4px
    z-index 2

  li
    margin 0
    padding 0

  .selected
    background-color #ddd

  a
    display block
    padding 10px 20px
    text-decoration none
    color initial
